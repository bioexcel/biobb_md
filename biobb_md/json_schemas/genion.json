{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_md/json_schemas/1.0/genion",
    "name": "biobb_md Genion",
    "title": "Wrapper class for the GROMACS genion module.",
    "description": "The GROMACS genion module randomly replaces solvent molecules with monoatomic ions. The group of solvent molecules should be continuous and all molecules should have the same number of atoms.",
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "GROMACS Genion",
            "version": ">5.1",
            "license": "LGPL 2.1"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "input_tpr_path",
        "output_gro_path",
        "input_top_zip_path",
        "output_top_zip_path"
    ],
    "properties": {
        "input_tpr_path": {
            "type": "string",
            "description": "Path to the input portable run input TPR file",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_md/raw/master/biobb_md/test/data/gromacs/genion.tpr",
            "enum": [
                ".*\\.tpr$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.tpr$",
                    "description": "Path to the input portable run input TPR file",
                    "edam": "format_2333"
                }
            ]
        },
        "output_gro_path": {
            "type": "string",
            "description": "Path to the input structure GRO file",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_md/raw/master/biobb_md/test/reference/gromacs/ref_genion.gro",
            "enum": [
                ".*\\.gro$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.gro$",
                    "description": "Path to the input structure GRO file",
                    "edam": "format_2033"
                }
            ]
        },
        "input_top_zip_path": {
            "type": "string",
            "description": "Path the input TOP topology in zip format",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_md/raw/master/biobb_md/test/data/gromacs/genion.zip",
            "enum": [
                ".*\\.zip$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.zip$",
                    "description": "Path the input TOP topology in zip format",
                    "edam": "format_3987"
                }
            ]
        },
        "output_top_zip_path": {
            "type": "string",
            "description": "Path the output topology TOP and ITP files zipball",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_md/raw/master/biobb_md/test/reference/gromacs/ref_genion.zip",
            "enum": [
                ".*\\.zip$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.zip$",
                    "description": "Path the output topology TOP and ITP files zipball",
                    "edam": "format_3987"
                }
            ]
        },
        "input_ndx_path": {
            "type": "string",
            "description": "Path to the input index NDX file",
            "filetype": "input",
            "sample": null,
            "enum": [
                ".*\\.ndx$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.ndx$",
                    "description": "Path to the input index NDX file",
                    "edam": "format_2033"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "replaced_group": {
                    "type": "string",
                    "default": "SOL",
                    "wf_prop": false,
                    "description": "Group of molecules that will be replaced by the solvent."
                },
                "neutral": {
                    "type": "boolean",
                    "default": false,
                    "wf_prop": false,
                    "description": "Neutralize the charge of the system."
                },
                "concentration": {
                    "type": "number",
                    "default": 0.05,
                    "wf_prop": false,
                    "description": "Concentration of the ions in (mol/liter).",
                    "min": 0.0,
                    "max": 10.0,
                    "step": 0.01
                },
                "seed": {
                    "type": "integer",
                    "default": 1993,
                    "wf_prop": false,
                    "description": "Seed for random number generator."
                },
                "gmx_lib": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Path set GROMACS GMXLIB environment variable."
                },
                "gmx_path": {
                    "type": "string",
                    "default": "gmx",
                    "wf_prop": false,
                    "description": "Path to the GROMACS executable binary."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "wf_prop": true,
                    "description": "Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "wf_prop": true,
                    "description": "Do not execute if output files exist."
                },
                "container_path": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Path to the binary executable of your container."
                },
                "container_image": {
                    "type": "string",
                    "default": "gromacs/gromacs:latest",
                    "wf_prop": false,
                    "description": "Container Image identifier."
                },
                "container_volume_path": {
                    "type": "string",
                    "default": "/data",
                    "wf_prop": false,
                    "description": "Path to an internal directory in the container."
                },
                "container_working_dir": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Path to the internal CWD in the container."
                },
                "container_user_id": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "User number id to be mapped inside the container."
                },
                "container_shell_path": {
                    "type": "string",
                    "default": "/bin/bash",
                    "wf_prop": false,
                    "description": "Path to the binary executable of the container shell."
                }
            }
        }
    },
    "additionalProperties": false
}