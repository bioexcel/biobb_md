{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_md/json_schemas/1.0/ndx2resttop",
    "name": "biobb_md Ndx2resttop",
    "title": "Generate a restrained topology from an index NDX file.",
    "description": "This module automatizes the process of restrained topology generation starting from an index NDX file.",
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "In house",
            "license": "Apache-2.0"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "input_ndx_path",
        "input_top_zip_path",
        "output_top_zip_path"
    ],
    "properties": {
        "input_ndx_path": {
            "type": "string",
            "description": "Path to the input NDX index file",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_md/raw/master/biobb_md/test/data/gromacs_extra/ndx2resttop.ndx",
            "enum": [
                ".*\\.ndx$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.ndx$",
                    "description": "Path to the input NDX index file",
                    "edam": "format_2330"
                }
            ]
        },
        "input_top_zip_path": {
            "type": "string",
            "description": "Path the input TOP topology in zip format",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_md/raw/master/biobb_md/test/data/gromacs_extra/ndx2resttop.zip",
            "enum": [
                ".*\\.zip$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.zip$",
                    "description": "Path the input TOP topology in zip format",
                    "edam": "format_3987"
                }
            ]
        },
        "output_top_zip_path": {
            "type": "string",
            "description": "Path the output TOP topology in zip format",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_md/raw/master/biobb_md/test/reference/gromacs_extra/ref_ndx2resttop.zip",
            "enum": [
                ".*\\.zip$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.zip$",
                    "description": "Path the output TOP topology in zip format",
                    "edam": "format_3987"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "force_constants": {
                    "type": "string",
                    "default": "500 500 500",
                    "wf_prop": false,
                    "description": "Array of three floats defining the force constants."
                },
                "ref_rest_chain_triplet_list": {
                    "type": "string",
                    "default": null,
                    "wf_prop": false,
                    "description": "Triplet list composed by (reference group, restrain group, chain) list."
                }
            }
        }
    },
    "additionalProperties": false
}